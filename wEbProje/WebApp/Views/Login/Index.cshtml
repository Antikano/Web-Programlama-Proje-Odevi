<h2>Login Sayfası</h2>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="YazarMail" class="control-label"></label>
                <input asp-for="YazarMail" class="form-control" />
                <span asp-validation-for="YazarMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YazarSifre" class="control-label"></label>
                <input asp-for="YazarSifre" class="form-control" />
                <span asp-validation-for="YazarSifre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yazar Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>