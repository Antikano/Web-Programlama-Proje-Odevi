@model List<Entities.Concrete.Kitap>



<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Kitaplar</h6>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Kitap Adı</th>
                    <th>Yayın Evi</th>
                    <th>Kitap Sil</th>

                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.KitapAdi</td>
                        <td>@item.YayinEvi</td>
                        <td> <a class="btn btn-danger btn-lg active btn-sm " asp-controller="Kitap" asp-action="KitapSil" asp-route-KitapID="@item.KitapID">Sil</a></td>

                    </tr>

                </tbody>
            }
        </table>
    </div>
</div>