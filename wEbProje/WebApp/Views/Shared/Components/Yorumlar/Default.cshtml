@model List<Entities.Concrete.Yorum>

<div class="col-lg-8 ">


    <div >
        <h4>Yorumlar | @Model.Count</h4>
        @foreach (var item in Model)
        {
            <div class="media">

            <div class="media-body">
                <h5 class="mt-0">@item.YorumAd</h5>
                <p>
                   @item.YorumIcerik
                </p>
            </div>
        </div>
        }
        
    </div>
    <hr />
    <div class="comment-top">
        
        <h4>Yorum Bırakın!</h4>
        <hr />
        <div class="comment-bottom">
            <form action="#" method="post">
                <input class="form-control" type="text" name="Name" placeholder="Ad" required="">
                <input class="form-control" type="email" name="Email" placeholder="Email" required="">
                <textarea class="form-control" name="Message" placeholder="Yorum..." required=""></textarea>
                <button type="submit" class="btn btn-primary submit">Yorum Yap!</button>
            </form>
        </div>
    </div>
</div>