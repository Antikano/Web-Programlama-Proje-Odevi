@using Entities.Identity;
@using Microsoft.AspNetCore.Identity;
@model List<Entities.Concrete.Yorum>
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
        
    


<div class="col-lg-8 ">


    <div >
            <h4 class="fw-bold" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><b>Yorumlar | @Model.Count</b></h4>
        @foreach (var item in Model)
        {
            <hr />
            <div class="media">

            <div class="media-body">
                        <h5 class="mt-0"><b>@item.YorumAd</b></h5>
                        <p class="small">@item.YorumTarih  |
                        @if(User.Identity.Name == item.YorumAd || User.IsInRole("Admin"))
                        {   
                            
                              <a class="btn-sm btn btn-dark ml-3" asp-controller="Yorum" asp-action="YorumSil" asp-route-YorumID="@item.YorumID">Sil</a>
                            
                        }
                                </p>
                        <p class="text-gray-800">
                   @item.YorumIcerik
                </p>
            </div>
        </div>
        }
        
    </div>
    <hr />

        
    </div>
}