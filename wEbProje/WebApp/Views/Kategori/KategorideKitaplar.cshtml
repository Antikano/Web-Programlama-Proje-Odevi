@model List<Entities.Concrete.Kitap>

	
<body>

	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle text-center fw-bold"></h3>
			<hr />
			<div class="row inner-sec">
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="row mb-4">
						<header style="margin-bottom:10px" class="bg-dark">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
			<h1 class="display-4 fw-bolder">@ViewBag.Kategori</h1>
			<p class="lead fw-normal text-white-50 mb-0">@ViewBag.Kategori türündeki kitaplar.</p>
                </div>
            </div>
			<br />
        </header>

						@foreach (var item in Model)
						{

							<div style="margin-bottom:10px" class="col-lg-3  card">
								<div class="card h-100">
									<!-- Sale badge-->
									<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.YayinEvi</div>
									<!-- Product image-->
									<a asp-action="KitapDetaylari">
										<img style="height: 300px" src="~/@item.KitapResmi" class="card-img-top img-fluid" alt="">
									</a>
									<!-- Product details-->
									<div class="card-body p-4">
										<div class="text-center">
											<!-- Product name-->
											<h5 class="fw-bolder">@item.KitapAdi</h5>
											<!-- Product price-->
											<p class="card-text mb-3">@item.KitapTanimi.Substring(0,22)...</p>
										</div>
									</div>
									<!-- Product actions-->
									<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
										<div class="text-center"><a class="btn btn-primary read-m" asp-controller="Kitap" asp-action="KitapDetaylari" asp-route-id="@item.KitapID">Detaylar</a></div>
									</div>
								</div>
							</div>
							<br />

						}
					</div>

				</div>
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-left">
					@await Component.InvokeAsync("KategoriList")
				</aside>
			</div>
		</div>
	</section>

</body>