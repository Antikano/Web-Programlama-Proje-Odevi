@model Entities.Concrete.Kitap

<style>
	.parent {
display: grid;
grid-template-columns: 1fr 2fr repeat(3, 0);
grid-template-rows: repeat(4, 0) 1fr;
grid-column-gap: 0px;
grid-row-gap: 0px;
}
</style>

<body>

	<hr />
	<div class="container">
		<div class="row gx-5 ">
			<div class="col-md-2"></div>
			<div class="col-md-3" style="margin-right:50px">
                <img src="~/@Model.KitapResmi" class="card-img-top img-fluid" alt="">
			</div>
			
			<div class="col-md-6">
                <h1 style="font-family:Arial,Helvetica,sans-serif">@Model.KitapAdi</h1>
                <h6>
                    <b>Yazar</b> : @Model.Yazar.YazarAd | <b>Yayın Evi</b> : @Model.YayinEvi
                </h6>
				<div>
					@Model.KitapTanimi
				</div>
			</div>


		</div>
		<hr />
		
		@await Component.InvokeAsync("Yorumlar",new{id=Model.KitapID})
		<partial name="_YorumYapPartial" />
		
	</div>
	<hr />
	</body>